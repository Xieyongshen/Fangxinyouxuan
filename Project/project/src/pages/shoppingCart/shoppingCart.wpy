                        <view class="input-picker {{deliverChoose < 0 ? 'picker-null' : ''}}">
                            <block wx:if="{{deliverChoose >= 0}}">{{deliverList[deliverChoose].name}}</block>
                            <block wx:else>请选择配送方式</block>
